\begin{equation}
Y^{i}(q)=\tilde{Y}^{k}(q)\frac{\partial x^{i}}{\partial\tilde{x}^{k}}(q)\text{ and }v^{j}=\tilde{v}^{l}\frac{\partial x^{j}}{\partial\tilde{x}^{l}}(p).\label{eq:6}
\end{equation}

\end_inset

